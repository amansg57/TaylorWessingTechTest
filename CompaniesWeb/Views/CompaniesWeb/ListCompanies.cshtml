@model CompaniesWeb.Models.CompanyListViewModel

@{
    ViewBag.Title = "Company List";
}

<style>
    tr:hover {
        cursor: pointer;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h2 class="h3 mb-0">@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Company Name</th>
                                <th scope="col">Company Number</th>
                                <th scope="col">Email</th>
                                <th scope="col">Jurisdiction</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr onclick="location.href='@Url.Action("CompanyDetails", "CompaniesWeb", new { id = item.CompanyId })';">
                                    <td>@item.CompanyName</td>
                                    <td>@item.CompanyNumber</td>
                                    <td>@item.Email</td>
                                    <td>@item.Jurisdiction</td>
                                    <td>
                                        <form method="post" action="@Url.Action("DeleteCompany", "CompaniesWeb", new { id = item.CompanyId })">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
